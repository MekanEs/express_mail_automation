{
  "compilerOptions": {
    "target": "ES2020", // или другой нужный уровень
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src", // добавь rootDir
    "strict": true, // включить строгий режим (высокое качество типизации)
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
